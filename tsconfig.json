{
  "compilerOptions": {
    "target": "ES2015",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "noImplicitAny": false,
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "preserveSymlinks": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "lib", "**/*.stories.tsx"]
}
