{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib/esm",
    "module": "ES2020",
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "lib",
    "stories",
    "**/*.stories.tsx",
    "**.test.ts",
    "**.test.tsx"
  ]
}
