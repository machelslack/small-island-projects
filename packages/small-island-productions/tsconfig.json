{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib/esm",
    "module": "ES2020",
    "jsx": "preserve",
    "jsxImportSource": "@emotion/react",
    "types": [
      "node"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "stories",
    "**/*.stories.tsx",
    "**.test.ts",
    "**.test.tsx"
  ]
}
